<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<Dialog title="Have a Query?">
		<content>
		<VBox>
			<HBox>
				<Text class="sapUiSmallMargin" text="Subject:"></Text>
				<Input  id="subject"></Input>
			</HBox>
			<HBox>
				<Text class="sapUiSmallMargin" text="Content:"></Text>
				<TextArea id="textarea" value="" growing="true" width="100%" rows="8" cols="22" wrapping="Soft" />
			</HBox>
		</VBox>	
		</content>
		<beginButton>
			<Button text="Submit" press="onSubmit"></Button>
		</beginButton>
		<endButton>
			<Button text="Close" press="onClose" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>