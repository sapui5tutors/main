<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<Dialog id="approvalDialog" title="{approvalProperties>/approvalTitle}" class="sapUiContentPadding">
		<content>
			<l:VerticalLayout id="textLayout" width="100%">
				<Text id="approvalText" text="{approvalProperties>/approvalText}" />
				<TextArea id="noteTextArea" value ="{approvalProperties>/approvalNote}" rows="5" width="100%" placeholder="{i18n>xfld.approvalNote}" />
			</l:VerticalLayout>
		</content>	
		<beginButton>
			<Button id="confirmButton" text="{i18n>xbut.buttonOK}" press="onConfirmAction" />
		</beginButton>
		<endButton>
			<Button id="cancelButton" text="{i18n>xbut.buttonCancel}" press="onCancelAction" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>